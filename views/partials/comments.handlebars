{{#each comments as |comment| }}
<div class="row mb-4 post comments" style="margin-top:50px;">
  <div>

    <p>
      {{post_comment}}
    </p>

    <div class="comment-user-info">
      <p style="margin-bottom:0.5rem; margin-top: 10px;">

        <span style="margin-right:20px;">
          <img class="post-icon" src="/images/posticon.png" alt="post icon"/> {{user.name}}
        </span>

        <span style="margin-right:20px;">
          <img class="post-icon" src="/images/postdateicon.jpg" alt="post date icon"/> 
          {{format_date date_created}}      
        </span>
      </p>
    </div>

  </div>
</div>
{{/each}}