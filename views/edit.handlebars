<div>
  <h1 style="margin-bottom:40px;">edit:</h1>

  <form class="form edit-post-form">
    <div class="form-group mb-3">
      <label for="edit-title" class="form-label"><h6>title:</h6></label>
      <input
        class="form-input"
        type="text"
        id="edit-title"
        name="edit-title"
        value="{{title}}"/>
    </div>

    <div class="form-group mb-3">
      <label for="edit-content" class="form-label"><h6>content:</h6></label>
      <textarea
        class="form-input"
        id="edit-content"
        name="editContent"
        rows="6">{{content}}
      </textarea>
    </div>
    <div class="form-group mb-3">
      <button type="submit" class="theme-button">/submit</button>
    </div>
  </form>

</div>

<script src="/public/js/edit.js"></script>