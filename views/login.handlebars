<div class="row">

  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group mb-3">
        <label for="email-login" class="form-label"><h6>email:</h6></label>
        <input class="form-input-single" type="text" id="email-login">
      </div>

      <div class="form-group mb-3">
        <label for="password-login" class="form-label"><h6>password:</h6></label>
        <input class="form-input-single" type="password" id="password-login">
      </div>

      <div class="form-group mb-3">
        <button class="theme-button" type="submit">Login</button>
      </div>

    </form>
  </div>

  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group mb-3">
        <label for="name-signup" class="form-label"><h6>name:</h6></label>
        <input class="form-input-single" type="text" id="name-signup">
      </div>

      <div class="form-group mb-3">
        <label for="email-signup" class="form-label"><h6>email:</h6></label>
        <input class="form-input-single" type="text" id="email-signup">
      </div>

      <div class="form-group mb-3">
        <label for="password-signup" class="form-label"><h6>password:</h6></label>
        <input class="form-input-single" type="password" id="password-signup">
      </div>

      <div class="form-group mb-3">
        <button class="theme-button" type="submit">Signup</button>
      </div>
    
    </form>
  </div>
</div>

<script src="/js/login.js"></script>